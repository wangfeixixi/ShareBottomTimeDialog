<resources>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--&lt;!&ndash;背景颜色及和透明程度&ndash;&gt;-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--&lt;!&ndash;是否去除标题 &ndash;&gt;-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--&lt;!&ndash;是否去除边框&ndash;&gt;-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--&lt;!&ndash;是否模糊&ndash;&gt;-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--setCanceledOnTouchOutside-->
        <!--//Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--//是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--//是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--//设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--//显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--//就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--//显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/radio_button_color_seletor</item>
        <item name="peng_drawableTopHeight">23px</item>
        <item name="peng_drawableTopWidth">23px</item>
    </style>

    <style name="text_content">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


</resources>
