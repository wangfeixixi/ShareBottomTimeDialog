<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wangfeixixi.github.com.wiget.MainActivity">

    <Button
        android:id="@+id/btn_timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间选择" />

    <Button
        android:id="@+id/btn_editview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑框" />

    <Button
        android:id="@+id/btn_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日历" />

    <Button
        android:id="@+id/btn_sweet_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dialog" />

    <!--<ImageView-->
    <!--android:id="@+id/iv"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="200dp" />-->

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button"
        android:layout_width="40dp"
        android:layout_height="24.6dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        app:sb_background="#dddddd"
        app:sb_checked_color="#00C5FF"
        app:sb_show_indicator="false"
        app:sb_uncheck_color="#dddddd" />

    <wangfeixixi.share.batter.BatteryView
        android:id="@+id/horizontalBattery"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryColor="@android:color/black"
        app:batteryOrientation="horizontal"
        app:batteryPower="70" />

    <wangfeixixi.share.batter.BatteryView
        android:id="@+id/verticalBattery"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryOrientation="vertical" />
</LinearLayout>
